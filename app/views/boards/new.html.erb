<% if @board.errors.count != 0 %>
  <div class="notification is-danger">
    <% @board.errors.full_messages.each do |message| %>
      <p>・<%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: @board do |form| %>
  <div class="field">
    <label class="label">タイトル</label>
    <div class="control">
      <%= form.text_field :title, class: 'input' %>
    </div>
  </div>

  <%= form.fields_for :comments do |comment_form| %>
    <div class="field">
      <label class="label">1コメ</label>
      <div class="control">
        <%= comment_form.text_area :text, class: 'textarea' %>
      </div>
    </div>
  <% end %>

  <div class="field is-grouped">
    <div class="control">
      <%= form.submit "作成", class: "button is-link" %>
    </div>
    <div class="control">
      <button class="button is-link is-light">キャンセル</button>
    </div>
  </div>
<% end %>